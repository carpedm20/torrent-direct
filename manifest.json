{
	"manifest_version": 2,
	"name": "Torrent Direct",
	"description": "Search & Download Torrent",
	"version": "1.0",
	"permissions": [
		"storage",
    "https://www.google.co.kr/",
    "http://movie.naver.com/",
    "http://www.torrent82.com/"
	],
	"icons": { 
		"16": "img/icon16.png",
		"48": "img/icon48.png",
		"128": "img/icon128.png" 
	},
	"browser_action": {
		"default_icon": {                    
			"19": "img/icon48.png",          
			"38": "img/icon48.png"          
		},
		"default_popup": "html/popup.html"
	},
	"content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
	"web_accessible_resources": [
		"img/icon128.png"
	]
}